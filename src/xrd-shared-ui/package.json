{
  "name": "xrd-shared-ui",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "build-only": "vite build && vue-tsc --emitDeclarationOnly",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "main": "./dist/xrd-shared-ui.umd.js",
  "module": "./dist/xrd-shared-ui.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/xrd-shared-ui.js",
      "require": "./dist/xrd-shared-ui.umd.js"
    },
    "./dist/*.css": {
      "import": "./dist/*.css",
      "require": "./dist/*.css"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "deepmerge": "^4.3.1",
    "@mdi/font": "^7.2.96",
    "@fontsource/open-sans": "^5.0.3"
  },
  "peerDependencies": {
    "vue": "^3.3.4",
    "vue-i18n": "^9.2.2",
    "vuetify": "^3.3.3"
  },
  "devDependencies": {
    "@intlify/unplugin-vue-i18n": "^0.11.0",
    "@rushstack/eslint-patch": "^1.2.0",
    "@tsconfig/node18": "^2.0.1",
    "@types/node": "^18.16.17",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.43.0",
    "eslint-plugin-vue": "^9.15.0",
    "eslint-plugin-vuetify": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "sass": "^1.63.4",
    "typescript": "~5.0.4",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^2.3.0",
    "vite-plugin-vuetify": "^1.0.2",
    "vue": "^3.3.4",
    "vue-eslint-parser": "^9.3.1",
    "vue-tsc": "^1.6.5"
  }
}
